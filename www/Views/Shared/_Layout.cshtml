<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <environment names="Development">
        <link href="//cdn.jsdelivr.net/bootstrap/3.3.7/css/bootstrap.css" rel="stylesheet"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.css"
              asp-fallback-test-class="hidden" asp-fallback-test-property="visibility" asp-fallback-test-value="hidden" />
    </environment>
    <environment names="Staging,Production">
        <link href="//cdn.jsdelivr.net/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="hidden" asp-fallback-test-property="visibility" asp-fallback-test-value="hidden" />
    </environment>
    <link href="~/css/app.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">英卡科技</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#"><span class="glyphicon glyphicon-home"></span> @ViewBag.Title</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-link"></span> Links <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-header">npm - nodejs packages</li>
                            <li><a href="https://www.npmjs.com/package/git-version-json">git-version-json</a></li>
                            <li><a href="https://www.npmjs.com/package/gulp-schema">gulp-schema</a></li>
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header">推荐链接</li>
                            <li><a href="http://www.phys.ncku.edu.tw/~astrolab/mirrors/apod/apod.html">NASA APOD - 美国航空航天局每日一图</a></li>
                        </ul>
                    </li>
                    @*<li><a href="#contact">Contact</a></li>*@
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#about"><span class="glyphicon glyphicon-info-sign"></span> About</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    @RenderBody()

    <environment names="Development">
        <script>window['env'] = "Development";</script>
        <script data-main="/js/app.js" src="//cdn.jsdelivr.net/requirejs/2.1.22/require.js"
                asp-fallback-src="~/lib/requirejs/require.js" asp-fallback-test="window.requirejs"></script>
    </environment>
    <environment names="Staging,Production">
        <script>window['env'] = "Production";</script>
        <script data-main="/js/app.js" src="//cdn.jsdelivr.net/requirejs/2.1.22/require.min.js"
                asp-fallback-src="~/lib/requirejs/require.min.js" asp-fallback-test="window.requirejs"></script>
    </environment>
</body>
</html>
